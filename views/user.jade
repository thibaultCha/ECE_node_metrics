extends layout

block head
  link(rel="stylesheet" href="/css/user.css")

block content
  h1#email= user.email

  :coffee
    $(document).ready(->
      user_email = $('#email').html()
      $.ajax "/users/#{user_email}/metrics.json",
      type: "GET",
      data: {},
      statusCode:
        200: (response) ->
          console.log response
        404: (response) ->
          alert 'User not found: ' + user_email
    )
